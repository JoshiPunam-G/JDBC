package com.bridgelabz.autowiring;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Qualifier;

public class Human {
	
	private Heart heart;

	
	  public Human() {
	  
	  }
	 
	
	public Human(Heart heart) {
		this.heart = heart;
		System.out.println(" Human Constructor call");
	}
	
	@Autowired
	@Qualifier("heartHeart")
	public void setHeart(Heart heart) {
		this.heart = heart;
		System.out.println("Setter method call");
	
	}
	
	public void startPumping()
	{
		if(heart!=null)
		{
		heart.pump();
		System.out.println("Name Of animal is:" +heart.getNameOfAnimal()+
				 "Number  of Hearts present :" +heart.getNoOfHeart());
		}
		else
		{
			System.out.println("You are Dead ");
		}
	}
	
	
}
